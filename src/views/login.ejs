<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Express â€¢ TodoMVC</title>
    <link rel="stylesheet" href="/css/base.css" />
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/css/login.css" />
  </head>
  <body>
    <section class="prompt">
      <h1>Sign in</h1>
      <% if (hasMessages) { %>
      <section class="messages">
        <% messages.forEach(function(message) { %>
        <p><%= message %></p>
        <% }); %>
      </section>
      <% } %>
      <form action="/auth/login/password" method="post">
        <section>
          <label for="username">Username</label>
          <input
            id="username"
            name="username"
            type="text"
            autocomplete="username"
            required
            autofocus
          />
        </section>
        <section>
          <label for="current-password">Password</label>
          <input
            id="current-password"
            name="password"
            type="password"
            autocomplete="current-password"
            required
          />
        </section>
        <button type="submit">Sign in</button>
      </form>
      <hr />
      <p class="help">Don't have an account? <a href="/auth/signup">Sign up</a></p>
    </section>
    <footer class="info">
      <p>
        Created by <a href="https://felipe-roque.netlify.app/">Felipe Roque</a>
      </p>
      <p>
        Part of
        <a href="https://github.com/feliperroque/capstone-project"
          >Capstone Project</a
        >
      </p>
      <p>
        Authentication powered by
        <a href="https://www.passportjs.org">Passport</a>
      </p>
    </footer>
  </body>
</html>
